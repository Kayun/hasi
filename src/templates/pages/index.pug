extends ../layouts/index
include ../blocks/counter
include ../blocks/test

mixin list(pages)
    ul.list
        each page in pages
            li.list__item
                .list__page= page.href
                a.list__link(href='./' + page.href)= page.label


block content
    style.
        .index {
            display: block;
        }

        .list {
            padding-top: 20px;
            padding-left: 0;
            margin: 0;
            display: block;
            list-style: none;
            width: 500px;
        }

        .list__item {
            border: 1px solid #d0d0d0;
            padding: 10px;
            width: 100%;
            font-size: 14px;
        }

        .list__item + .list__item {
            margin-top: 10px;
        }

        .list__page {
            float: right;
        }

        .list__link {
            text-decoration: none;
            color: #347bbc;
            border-bottom: 1px solid transparent;
            transition: border-color .3s ease
        }

        .list__link:hover {
            border-color: #347bbc;
        }

    .index
        h1 List of pages
        +list([
            {label: 'Start page', href: "start.html"},
            {label: 'Single answer', href: "index_00.html"},
            {label: 'Multiple answer', href: "index_01.html"},
            {label: 'Fill-In Single answer', href: "index_03.html"},
            {label: 'Ranking', href: "index_04.html"}
        ])

