mixin font-switch(sizes, mobileSize)
    .font-switch.js-font-switch(class= attributes.class)
        .font-switch__option._size_11._active(data-size= sizes[0], data-mobile-size=mobileSize[0]) A
        .font-switch__option._size_13(data-size= sizes[1], data-mobile-size=mobileSize[1]) A
        .font-switch__option._size_15(data-size= sizes[2], data-mobile-size=mobileSize[2]) A
