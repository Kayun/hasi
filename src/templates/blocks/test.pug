mixin test(count, question, type, answers)
    form.test.js-question-form(href="#")
        .test__progress(style="width: 75%")
            .test__progress-point: span 75%

        .test__content
            .test__count.js-font #{count} of 180

            .js-font
                .test__question= question

                if type === "radio" || type === "checkbox"
                    each answer, index in answers
                        +option(type, answer).test__answer(name="answer", tabindex= index + 1)

                if type === "block"
                    block

        .test__control
            a.test__feedback.js-font(href="#") Feedback / Problems

            .test__control-buttons
                .button.test__button.js-question-submit.js-font Submit & Continue
                .button.test__button.js-font Submit & Pause/Leave Exam
