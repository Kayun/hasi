.page
    relative()
    //size: 100%
    display: flex
    flex-flow: column wrap
    min-height: 100%
    font-size: unit($font-size, 'px')

    +below(500px)
        font-size: 12px

    &__header
        flex: none
        size: 100% rem(40px)

    &__container
        flex: auto
        display: flex
        flex-direction column
        //height: 100%
        //min-height 100%
        //padding-top: rem(40px)
        //padding-bottom: rem(30px)

        +below(650px)
            //padding-bottom: rem(40px)

    &__content
        display: flex
        flex-direction column
        flex: 1 0 auto
        box-sizing content-box
        background-color: $page-color
        padding-bottom: rem(60px)

        +below(768px)
            padding-bottom: rem(20px)

    &__footer
        flex: none
        size: 100% rem(30px)

        +below(650px)
            //height: rem(40px)

.container
    margin: 0 auto
    padding-right: rem(37px)
    padding-left: rem(23px)
    width: 100%
    box-sizing content-box
    max-width: 1000px

    +below('l')
        width: auto
        max-width: none
        margin: 0

    +between('m', 'l')
        padding-left: rem(30px)
        padding-right: rem(30px)

    +below('s')
        padding-left: rem(20px)
        padding-right: rem(20px)

.desktop
    display: none

    +above(768px)
        display: block

.tablet
    display: none

    +between(640px, 768px)
        display: block

.mobile
    display: none

    +below(640px)
        display: block


