.button
    padding: 0 rem(13px)
    line-height: rem(18px)
    border: none
    background-color: $blue-color
    color: #ffffff
    font-size: 11.5px
    border-radius: 1px
    cursor: pointer
    letter-spacing: 0.55px;
    outline: none
    hover-darken: 10%
    transition: background-color .3s ease
