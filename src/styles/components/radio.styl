.radio
    display: inline-block

    &_without_letter

        & ^[0]__label
            padding-left: rem(19px)

    &__input
        absolute()
        opacity: 0

        &:checked + ^[0]__label:before
            background-color: $blue-color
            border-color: $blue-color
            box-shadow: none

        &:focus + ^[0]__label:before
            border-color: $blue-color

    &__letter
        vertically-align()
        absolute: left rem(16px)
        margin-top: rem(-2px)

    &__label
        relative()
        padding-left: rem(43px)
        line-height:  1.3
        cursor: pointer

        &:before
            size: 14px
            rounded()
            border: 1px solid #b4b4b4
            content: ''
            vertically-align()
            background-color: #ffffff
            absolute: left 0
            box-shadow: inset 0 1px 1px rgba(0, 0, 0, .15)
            transition()
            will-change: opacity

        &:after
            size: 4px
            z-index: 1
            rounded()
            background-color: #fff
            content: ''
            vertically-align()
            absolute: left 5px

        &:hover

            &:before
                border-color: $blue-color
                opacity: .8
