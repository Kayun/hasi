.overview
    display: block

    &__item
        relative()
        display: flex
        padding: rem(10px) 0 rem(9px)
        border-bottom: 1px solid transparent

        &:after
            absolute: bottom 0 left 0
            content: ''
            size: 100% 1px
            background-image: linear-gradient(to right, #dfdfdf, rgba(255, 255, 255, 0))

    &__count
        font-weight: 700
        color: $blue-color

    &__label
        flex: 1
        margin-left: 10px
