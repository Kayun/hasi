.sort
    margin: 0
    padding: 0
    list-style: none

    &__item
        relative()
        cursor: move

        &:not(:first-child)
            margin-top: rem(4px)

        &.ui-sortable-helper:first-child + &
            margin: 0

        &.ui-sortable-helper
            opacity: .75

            & ^[0]__count
                display: none

    &__placeholder
        height: 20px
        display: inline-block
        margin-left: 20px
        border: 1px dashed #000

    &__count
        vertically-align()
        absolute: left 0
        line-height: 18px

    &__label
        background-color: rgba(#fffa90, .5)
        margin-left: rem(15px)
        padding: 0 rem(10px)
        min-height: rem(36px)
        line-height: rem(18px)
        display: inline-flex
        align-items: center
        border-radius: 1px
        border: 1px solid #b4b4b4
        transition: border-color .3s ease

        &:hover
            border-color: $blue-color
