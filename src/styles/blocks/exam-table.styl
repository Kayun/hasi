.exam-table
    line-height: 14px
    border-collapse: collapse
    width: 100%

    &_desktop

        +below(641px)
            display: none

    &__head
        font-weight: 700
        background-color: $blue-color
        color: #ffffff

        th
            text-align: left
            padding: 9px 10px

    &__row

        td
            line-height: 14px
            text-align: left
            padding: 13px 10px 13px
            border-bottom: 1px solid #e4e4e4

            &^[0]__select-cell
                padding-top: 10px
                padding-bottom: 9px

            &^[0]__button-cell
                padding-top: 11px
                padding-bottom: 10px

    &__name
    &__status
        width: 190px

        +below(960px)
            width: auto

    &__option
        white-space: nowrap

    &__checkbox

        .checkbox__label
            min-height: auto

        +below(900px)

            .checkbox__label
                text-align: left
                flex-direction column
                align-items flex-start

    &__info
        top: -1px
        margin-left: rem(3px)

        +below(640px)
            top: 0

    &__select
        display: inline-block
        vertical-align: baseline
        margin: 0 5px
        width: 50px
        height: 20px
        line-height: rem(20px)

    &__button
        width: rem(130px)
        padding: 0

        &_left
            margin-top: 12px
            float: left

            & + .button
                margin-left: 10px

    &__button-cell
        width: 290px

        .button + .button
            margin-left: 10px

        +below(680px)
            width: 130px

            .button + .button
                margin-left: 0
                margin-top: 5px

.exam-table-card
    display: none

    +below(640px)
        display: block

    &__title
        @extend .exam-table__head
        @extend .exam-table__head th

    &__row
        @extend .exam-table__head
        @extend .exam-table__head th
        background-color: $page-bg-color
        font-weight: 500
        color: $font-color

    &__item
        display: flex

        &:last-child
            border-bottom: 1px solid #e4e4e4

    &__label
        width: 50%
        @extend .exam-table__head th
        text-align: right

    &__value
        width: 50%
        @extend .exam-table__head th

    &__time
        width: 100%
        @extend .exam-table__head th
        text-align: center

        +below(460px)

            .checkbox__label
                text-align: left
                flex-direction column
                align-items flex-start

    &__button

        +below(360px)
            flex-direction: column

            & ^[0]__label
            & ^[0]__value
                text-align: center
                width: 100%
