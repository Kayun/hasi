.exam-table
    line-height: 14px
    border-collapse: collapse
    width: 100%

    &__head
        font-weight: 700
        background-color: $blue-color
        color: #ffffff

        th
            text-align: left
            padding: 9px 10px

    &__row

        td
            line-height: 14px
            text-align: left
            padding: 13px 10px 13px
            border-bottom: 1px solid #e4e4e4

            &^[0]__select-cell
                padding-top: 10px
                padding-bottom: 9px

            &^[0]__button-cell
                padding-top: 11px
                padding-bottom: 10px

    &__checkbox

        .checkbox__label
            min-height: auto

    &__info
        top: -1px
        margin-left: rem(3px)

    &__select
        display: inline-block
        vertical-align: baseline
        margin: 0 5px
        width: 50px
        height: 20px
        line-height: rem(20px)

    &__button
        width: rem(130px)

    &__button-cell
        width: 290px

        .button + .button
            margin-left: 10px


