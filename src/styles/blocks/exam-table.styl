.exam-table
    line-height: 14px
    border-collapse: collapse
    width: 100%
    margin-bottom: 12px

    &_desktop

        +below(640px)
            display: none

    &__head
        font-weight: 700
        background-color: $blue-color
        color: #ffffff

        th
            text-align: left
            padding: 9px 10px

    &__row

        td
            line-height: 14px
            text-align: left
            padding: 13px 10px 13px
            border-bottom: 1px solid #e4e4e4

            &^[0]__select-cell
                padding-top: 10px
                padding-bottom: 9px

            &^[0]__button-cell
                padding-top: 11px
                padding-bottom: 10px

    &__name
    &__status
        width: 190px

        +below(960px)
            width: auto

    &__option
        white-space: nowrap

    &__checkbox

        .checkbox__label
            min-height: auto

        +below(900px)

            .checkbox__label
                text-align: left
                flex-direction column
                align-items flex-start

    &__info
        top: -1px
        margin-left: rem(3px)

        +below(640px)
            top: 0

    &__select
        display: inline-block
        vertical-align: baseline
        margin: 0 5px
        width: 50px
        height: 20px
        line-height: rem(20px)

        +below(640px)
            margin-left: 0

    &__button
        width: rem(130px)
        padding: 0

        &_left
            margin-top: 12px
            float: left

            & + .button
                margin-left: 10px

    &__button-cell
        width: 290px

        .button + .button
            margin-left: 10px

        +below(680px)
            width: 130px

            .button + .button
                margin-left: 0
                margin-top: 5px

.exam-table-card
    display: none

    & + &
        margin-top: 30px

    +below(640px)
        display: block

    &__item
        display: flex
        border-bottom: 1px solid #e4e4e4

        &:first-child
            border-top: 1px solid #e4e4e4

    &__label
        width: 40%
        @extend .exam-table__head
        @extend .exam-table__head th

    &__value
        width: 60%
        display: flex
        flex: none
        flex-direction: row
        align-items center
        @extend .exam-table__head th

        &_block
            display: block

    &__info
        margin-left: auto
        margin-top: -2px
        margin-bottom: -2px
        padding-top: 2px
        padding-left: 10px
        padding-bottom: 2px
        border-left: 1px solid #e4e4e4

        .answer__popup
            left: auto
            right: -10px
            transform: none

            &:before
                left: 89%

    &__time
        width: 100%
        @extend .exam-table__head th
        text-align: center

        +below(460px)

            .checkbox__label
                text-align: left
                flex-direction column
                align-items flex-start

    &__aligner
        padding-left: 19px

    &__button
        justify-content space-between

        +below(540px)
            flex-direction: column
            align-items: flex-end
            display: flex

            .button + .button
                margin-top: 10px

    &__descr
        padding-top: 5px
        color: #777777
        font-size: 10px
        line-height: 18px
