.header
    size: 100%
    background-color: $blue-color
    color: #fff

    &__inner
        margin: 0 auto
        padding: rem(11px) rem(74px)
        max-width: rem(1280px)

        +between('m', 'l')
            padding-left: rem(30px)
            padding-right: rem(30px)

        +below('s')
            padding-left: rem(20px)
            padding-right: rem(20px)

    &__font
        display: block
        width: 100px
        margin: 0 auto
        text-align: center

        +below(768px)
            width: auto
            margin-right: 50px
            text-align: right
            padding-right: 20px

        +below(460px)
            margin-right: 20px

    &__exit
        relative()
        display: inline-block
        padding-right: rem(25px)
        line-height: rem(18px)
        font-weight: 700
        min-height: rem(18px)
        float: right
        color: #fff
        text-decoration: none
        hover-color: darken(#fff, 10%) true
        transition: color .3s ease

        +below(460px)
            padding-right: rem(18px)

        &:before
            absolute: top 0 right 0
            sprite2x($enter)
            content: ''

        &-text

            +below(460px)
                display: none

    &__user
        relative()
        float: left
        display: inline-block
        padding-left: rem(22px)
        line-height: rem(18px)
        max-width: rem(400px)
        text-overflow: ellipsis
        white-space: nowrap
        overflow: hidden

        +below(900px)
            max-width: 300px

        +below(480px)
            max-width: 280px

        &:before
            absolute: top 0 left 0
            sprite2x($person)
            content: ''

        &-divider

            +below(460px)
                display: none

        &-name
            font-weight: 700

        &-email
            color: #fff
            text-decoration: none

            +below(460px)
                display: none




