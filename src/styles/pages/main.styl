.main
    display: flex
    flex-flow: column nowrap
    height: 100%
    padding-top: rem(16px)

    &__logo
        size: rem(239px) rem(95px)

        +below(500px)
            size: rem(163px) rem(65px)
            margin-bottom: rem(10px)

    &__header
        relative()
        flex: 0 0 auto

    &__date
        absolute: top rem(50px) right 0
        color: #797979

        +below(460px)
            position: static

    &__outer
        padding-top: rem(48px)
        display: flex
        flex-flow: row nowrap
        flex: 1 0 auto

        +below(768px)
            flex-direction: column

        +below(460px)
            padding-top: rem(36px)

    &__inner
        width: 100%
        padding-top: rem(32px)
        border-top: rem(3px) solid #e4e4e4

    &__button
        float: right
        padding: 0 rem(35px)
        margin-top: rem(12px)

    &__counter
        relative()
        padding-left: rem(20px)
        padding-top: rem(37px)
        padding-bottom: rem(83px)
        flex: 0 0 263px

        +below(768px)
            padding-left: 0
            flex: 0 0 auto
            padding-top: rem(20px)
            padding-bottom: rem(20px)

    &__test
        display: flex
        flex: 1 1 auto
        order: -1
