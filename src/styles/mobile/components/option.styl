.option
    display: flex
    overflow: hidden

    &:not(:first-child)
        margin-top: rem(8px)

    &__icon
        relative()
        size: rem(101px) rem(90px)
        flex: none
        background-color: #dadada

        &:before
            absolute: top 50% left 50%
            content: ''
            transform: translate(-50%, -50%)

        &._practice:before
            sprite2x($practice)

        &._more-practice:before
            sprite2x($more_practice)

        &._admission:before
            sprite2x($admission)

        &._review:before
            sprite2x($review)

        &._forum:before
            sprite2x($forum)

        &._guide:before
            sprite2x($guide)

        +below(400px)

            &._practice:before
                sprite2x-scale($practice, $scaling-factor-less)

            &._more-practice:before
                sprite2x-scale($more_practice, $scaling-factor-less)

            &._admission:before
                sprite2x-scale($admission, $scaling-factor-less)

            &._review:before
                sprite2x-scale($review, $scaling-factor-less)

            &._forum:before
                sprite2x-scale($forum, $scaling-factor-less)

            &._guide:before
                sprite2x-scale($guide, $scaling-factor-less)

    &__label
        height: rem(90px)
        flex: auto
        display: flex
        align-items: center
        padding: 0 rem(20px)
        fs: rem(20px)
        text-transform: uppercase
        font-family: 'Montserrat', sans-serif
        color: #646464
        background-color: #e9e9e9

    &__separator
        vertically-align()
        absolute: right rem(-15px)
        size: rem(30px)
        rounded()
        background-color: #e9e9e9

        &:before
            content: ''
            absolute: top rem(4px) left rem(4px)
            size: rem(22px)
            rounded()
            border: 1px solid #a9a9a9

        &:after
            content: ''
            absolute: top rem(12px) left rem(11px)
            size: rem(6px)
            border-right: 1px solid #a9a9a9
            border-bottom: 1px solid #a9a9a9
            transform: rotate(-45deg)
