.other
    padding-top: rem(60px)
    padding-bottom: 35px

    &__title
        relative()
        padding: 0 rem(67px) rem(50px)
        font-family: 'Raleway', sans-serif
        font-weight: 500
        line-height: 1
        fs: rem(44px)
        color: #4e4e4e

        &:before
            absolute: bottom 0 left 0
            background-color: #058adf
            size: rem(170px) rem(4px)
            content: ''

    &__info
        padding: rem(47px) rem(67px) rem(40px)
        font-family: 'Raleway', sans-serif
        font-weight: 400
        fs: rem(24px)
        line-height: 1.3
        color: #3f3f3f

    &__option
        padding: 0 rem(10px)
        relative()

        &:not(:last-child)
            margin-bottom: rem(14px)

        &._open

            & ^[1]-label:before
                transform: rotate(90deg)

    &__option-label
        relative()
        display: flex
        padding: rem(20px) rem(40px) rem(20px) rem(7px)
        align-items: center
        border-radius: 4px
        padding-left: rem(57px)
        font-family: 'Montserrat', sans-serif
        font-weight: 400
        color: #ffffff
        line-height: rem(25px)
        fs: rem(24px)
        background-color: #058adf

        &:before
            content: ''
            absolute: top rem(26px) left rem(26px)
            sprite2x-rem($toggle)

    &__option-info
        relative()
        padding: rem(51px) rem(30px) rem(50px) rem(67px)
        margin-right: rem(35px)
        margin-left: rem(-10px)
        border-radius: 0 rem(20px) rem(20px) 0
        margin-top: rem(14px)
        font-size: rem(21px)
        background-color: #058adf
        color: #ffffff
        font-family: 'Montserrat', sans-serif

        &:before
            absolute: top rem(-9px) left rem(62px)
            content: ''
            border-left: rem(10px) solid transparent
            border-right: rem(10px) solid transparent
            border-bottom: rem(10px) solid #058adf

    &__option-title
        font-weight: 700
        line-height: 1.4

    &__option-text
        margin-top: rem(35px)
        font-weight: 300
        line-height: 1.4


