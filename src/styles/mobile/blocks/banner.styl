.banner
    height: rem(595px)
    font-family: 'SinkinSans', sans-serif
    background: #f8f8f8 url('../images/banner_1.jpg') no-repeat
    background-size: cover

    &__title
        margin: 0
        padding-top: rem(55px)
        padding-bottom: rem(17px)
        font-weight: 700
        text-align: center
        fs: rem(28px)
        line-height: 1.23

    &__text
        font-weight: 200
        text-align: center
        fs: rem(23px)
        line-height: 1.3

        &._small
            fs: rem(17px)
