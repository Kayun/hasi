.menu
    absolute: top 0 right 0 bottom 0 left 0
    background-color: rgba(#333, 0.85)
    padding: rem(50px)

    ul
        margin: 0
        padding: 0
        list-style: none

    &__close
        absolute: top rem(32px) right rem(32px)
        size: rem(46px)
        border: rem(2px) solid #fff
        border-radius: 50%
        transform: rotate(45deg)

        &:before
            absolute: top 50% left 50%
            transform: translate(-50%, -50%)
            size: rem(2px) rem(24px)
            content: ''
            background-color: #ffffff

        &:after
            absolute: top 50% left 50%
            transform: translate(-50%, -50%)
            size: rem(24px) rem(2px)
            content: ''
            background-color: #ffffff

    &__item
        display: block
        margin: rem(34px) 0
        padding: 0
        text-align: center
        line-height: rem(40px)
        text-decoration: none
        text-transform: uppercase
        color: #fff
        fs: rem(34px)
        font-weight: 300
        font-family: 'Montserrat', sans-serif
        transition()
