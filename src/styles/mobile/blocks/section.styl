.section
    padding: 0 rem(40px)

    &__title
        margin: 0
        font-family: 'Montserrat', sans-serif
        font-weight: 700
        text-align: center
        color: #3c72b1
        fs: rem(29px)
        line-height: 1.3

    &__subtitle
        @extend .section__title
        margin-top: rem(20px)
        fs: rem(20px)
        color: #404040
        line-height: 1.6

