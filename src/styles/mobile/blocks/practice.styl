.practice
    relative()
    padding: rem(22px) rem(20px) rem(40px)

    &:before
        absolute: top rem(-2px) right rem(2px)
        width: rem(320px)
        height: rem(356px)
        content: ''
        background: url('../images/practice.png') no-repeat
        background-size: cover

    &__inner
        border: 1px solid #e9e9e9
        border-radius: rem(8px)
        overflow: hidden

    &__title
        padding: rem(165px) rem(28px) rem(25px)
        font-family: 'Raleway', sans-serif
        font-weight: 500
        color: #434a54
        fs: rem(23px)
        line-height: 1.25

    &__item
        border-top: 1px solid #e9e9e9

        &._open

            & ^[1]-label:before
                transform: translateY(-50%) rotate(90deg)

            & ^[0]__option
                display: block

    &__item-label
        relative()
        color: #7d7d7d
        font-weight: 500
        font-family: 'Raleway', sans-serif
        line-height: rem(63px)
        padding-left: rem(47px)
        fs: rem(21px)

        &:before
            content: ''
            vertically-align()
            absolute: left rem(26px)
            sprite2x-rem($toggle_gray)

    &__option
        display: none
        //border-bottom: 1px solid #e9e9e9
        //
        //&:last-child
        //    border-bottom: none

        &._open

            & span:before
                transform: translateY(-50%) rotate(90deg)

            & ^[0]__info
                display: block

    &__option-label
        padding: 0 rem(25px)
        font-weight: 400
        font-family: 'Myriad Pro', sans-serif
        border-top: 1px solid #e9e9e9
        text-align: right
        line-height: rem(69px)
        color: #7d7d7d
        fs: rem(21px)

        span
            relative()

            &:before
                content: ''
                vertically-align()
                absolute: left rem(-20px)
                sprite2x-rem($quote)

    &__info
        relative()
        display: none
        padding: rem(60px) rem(20px) rem(47px)
        background-color: #7e8b92
        font-family: 'Montserrat', sans-serif
        fs: rem(21px)

        &:before
            absolute: top rem(-9px) right rem(102px)
            content: ''
            border-left: rem(10px) solid transparent
            border-right: rem(10px) solid transparent
            border-bottom: rem(10px) solid #7e8b92

    &__info-title
        font-weight: 700
        line-height: 1.4
        color: #ffffff

    &__info-text
        margin-top: rem(35px)
        line-height: 1.48
        font-weight: 300
        color: #ffffff
