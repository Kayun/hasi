.practice
    relative()
    padding: rem(22px) rem(20px)

    &:before
        absolute: top rem(-2px) right rem(2px)
        width: rem(320px)
        height: rem(356px)
        content: ''
        background: url('../images/practice.png') no-repeat
        background-size: cover

    &__inner
        border: 1px solid #e9e9e9
        border-radius: rem(8px)
        overflow: hidden

    &__title
        padding: rem(165px) rem(28px) rem(25px)
        font-family: 'Raleway', sans-serif
        font-weight: 400
        color: #434a54
        fs: rem(23px)
        line-height: 1.25

    &__item
        border-top: 1px solid #e9e9e9

    &__item-label
        color: #7d7d7d
        font-family: 'Raleway', sans-serif
        line-height: rem(62px)
        padding-left: rem(47px)
        fs: rem(21px)

    &__option
        border-bottom: 1px solid #e9e9e9

        &:last-child
            border-bottom: none

    &__option-label
        padding: 0 25px
        font-weight: 400
        font-family: 'Myriad Pro', sans-serif
        border-top: 1px solid #e9e9e9
        text-align: right
        line-height: rem(68px)
        color: #7d7d7d
        fs: rem(21px)

    &__info
        relative()
        padding: rem(60px) rem(20px) rem(47px)
        background-color: #7e8b92
        font-family: 'Montserrat', sans-serif
        fs: rem(21px)

        &:before
            absolute: top rem(-10px) right rem(120px)
            content: ''
            border-left: rem(10px) solid transparent
            border-right: rem(10px) solid transparent
            border-bottom: rem(10px) solid #7e8b92

    &__info-title
        font-weight: 700
        line-height: 1.4
        color: #ffffff

    &__info-text
        margin-top: rem(35px)
        line-height: 1.48
        font-weight: 300
        color: #ffffff
